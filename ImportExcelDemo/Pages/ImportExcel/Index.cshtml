@page
@model ImportExcelDemo.Pages.ImportExcel.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div class="container">
    <div class="tab-content">
        <div class="tab-pane active">
            <div class="row">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-sm-3">File Upload</label>
                        <div class="col-sm-7">
                            <input type="file" asp-for="Upload" accept=".xls,.xlsx" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <br />
                            <input type="submit" value="Upload" class="btn btn-dark" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-10">
                            <br />
                            <span style="color:red;">
                                @ViewData.Model.Message
                            </span>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>


</div>

<form>
    <div class="custom-file">
        <input type="file" class="custom-file-input" id="customFile">
        <label class="custom-file-label" for="customFile">Choose file</label>
    </div>
</form>




